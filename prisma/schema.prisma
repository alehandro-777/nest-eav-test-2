generator client {
  provider = "prisma-client"
  output   = "../src/!generated/prisma" // Required
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

//-------------------------------- MODELS

model Entity {
  id        Int      @id @default(autoincrement())
  name      String
  values    Value[]
  createdAt DateTime @default(now())
}

model Attribute {
  id      Int      @id @default(autoincrement())
  name    String
  typeId  Int
  rangeId Int?
  KVSetId Int?
  value   Value[]
  type    AttrType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  range   Range?   @relation(fields: [rangeId], references: [id])
  kVSet   KVSet?   @relation(fields: [KVSetId], references: [id])
}

model Value {
  id          Int       @id @default(autoincrement())
  ts          DateTime
  ent         Int
  att         Int

  strVal      String
  numVal      Float?
  dtVal       DateTime?
  blbVal      Bytes?      //PostGres @db.Bytea   //@db.LongBlob

  createdAt   DateTime?
  updatedAt   DateTime?
  deletedAt   DateTime?

  entity      Entity    @relation(fields: [ent], references: [id], onDelete: Cascade)
  attribute   Attribute @relation(fields: [att], references: [id], onDelete: Cascade)

  @@unique([ent, att, ts])
}

model KVSet {
  id         Int         @id @default(autoincrement())
  name       String
  values     KV[]
  attributes Attribute[]
  columns ColumnE[]
}

model KV {
  id    Int    @id @default(autoincrement())
  setId Int
  key   Int
  value String
  set   KVSet  @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@unique([setId, key])
}

model Range {
  id         Int         @id @default(autoincrement())
  min        Float?
  max        Float?
  attributes Attribute[]
  columns ColumnE[]
}

model AttrType {
  id         Int         @id @default(autoincrement())
  name       String
  attributes Attribute[]
  columns ColumnE[]
}

model Template {
  id   Int    @id @default(autoincrement())
  name String
  queries Query[]       //many-to-many
}

model Query {
  id     Int    @id @default(autoincrement())
  name   String
  params String
  templates Template[]  //many-to-many
}
// --------- EAV TABLES --------------------------------------
model TableE {
  id     Int    @id @default(autoincrement())
  name   String
  columns ColumnE[]
}

model ColumnE {
  id     Int    @id @default(autoincrement())
  col    Int  
  tab    Int 
  key    String
  name   String
  typ    Int
  ran    Int?
  kvs    Int?

  rows    RowEAV[]

  type    AttrType @relation(fields: [typ], references: [id], onDelete: Cascade)
  table   TableE   @relation(fields: [tab], references: [id], onDelete: Cascade)
  range   Range?   @relation(fields: [ran], references: [id])
  kVSet   KVSet?   @relation(fields: [kvs], references: [id])

  @@unique([col, tab])
}

model RowEAV {
  id     Int    @id @default(autoincrement())
  row    Int    
  col    Int

  strVal      String
  numVal      Float?
  dtVal       DateTime?
  blbVal      Bytes?      //PostGres @db.Bytea   //@db.LongBlob

  createdAt   DateTime?
  updatedAt   DateTime?
  deletedAt   DateTime?
  
  column ColumnE @relation(fields: [col], references: [id], onDelete: Cascade) 
  
  @@unique([row, col])  
}